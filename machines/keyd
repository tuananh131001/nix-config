[ids]
*

[main]
leftmeta = layer(cmd)
rightmeta = layer(cmd)

capslock = leftmeta

[cmd:C]
a = C-a          # Select all
c = C-c          # Copy
v = C-v          # Paste
x = C-x          # Cut
z = C-z          # Undo
s = C-s          # Save
f = C-f          # Find
w = C-w          # Close tab
t = C-t          # New tab
q = C-q          # Quit

left = C-a       # Beginning of line
right = C-e      # End of line

[cmd]
left = home
right = end
shift+left = S-home
shift+right = S-end
